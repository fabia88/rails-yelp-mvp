<div class="container text-left">
<h1><%= @restaurant.name %></h1>
  <p><%= @restaurant.category %></p>
  <p><%= @restaurant.address %></p>
  <p><%= @restaurant.phone_number %></p>


  <%= link_to "Back to restaurants", restaurants_path, class: "btn btn-primary" %>
</div>

<div class="container">
  <% if @restaurant.reviews.empty? %>
    <h5>No reviews yet</h5>
  <% else %>
    <% @restaurant.reviews.each do |r| %>
    <p>Rating: <%= r.rating %></p>
    <p><%= r.content %></p>
    <% end %>
  <% end %>
</div>

<div class="container">
  <h1>Add a new review</h1>
  <%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, collection: 0..5, prompt: "Pick a rating" %>
  <%= f.submit "Go!", class: "btn btn-primary" %>
  <% end %>
</div>
